<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/card_view_bg"
            app:cardBackgroundColor="#80000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:id="@+id/view_one"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/view_two"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/tv_tl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TL"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toTopOf="@id/view_one"
                    app:layout_constraintEnd_toStartOf="@id/view_two"
                    app:layout_constraintStart_toStartOf="@id/view_one"
                    app:layout_constraintTop_toTopOf="@id/view_two" />

                <TextView
                    android:id="@+id/tv_tr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TR"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toTopOf="@id/view_one"
                    app:layout_constraintEnd_toEndOf="@id/view_one"
                    app:layout_constraintStart_toEndOf="@id/view_two"
                    app:layout_constraintTop_toTopOf="@id/view_two" />

                <TextView
                    android:id="@+id/tv_bl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BL"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@id/view_two"
                    app:layout_constraintEnd_toStartOf="@id/view_two"
                    app:layout_constraintStart_toStartOf="@id/view_one"
                    app:layout_constraintTop_toBottomOf="@id/view_one" />

                <TextView
                    android:id="@+id/tv_br"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BR"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@id/view_two"
                    app:layout_constraintEnd_toEndOf="@id/view_one"
                    app:layout_constraintStart_toEndOf="@id/view_two"
                    app:layout_constraintTop_toBottomOf="@id/view_one" />

                <ImageView
                    android:id="@+id/iv_close"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/square_close"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/white" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>